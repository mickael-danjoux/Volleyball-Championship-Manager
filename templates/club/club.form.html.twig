{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-md-5 mx-auto">
        {% if club.id is not defined %}
            <h4 class="text-center mb-4">Ajouter un club</h4>
        {% else %}
            <h4 class="text-center mb-4">{{ club.name }} - Informations</h4>
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="nav-link active" href="">Informations</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url('teams', {'clubId':club.id}) }}">Équipes</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url('courts', {'clubId':club.id}) }}">Terrains</a></li>
            </ul>
        {% endif %}
        <form method="POST">
            <input class="d-none" id="inputId" name="id" value="{% if club.id is defined %}{{ club.id }}{% endif %}"/>
            <div class="form-group">
                <label for="inputClubName">Nom du club</label>
                <input class="form-control" id="inputClubName" type="text" name="name" value="{% if club.name is defined %}{{ club.name }}{% endif %}" required/>
            </div>
            <div class="form-group">
                <label for="inputManagerLastName">Nom du référent</label>
                <input class="form-control" id="inputManagerLastName" type="text" name="managerLastName" value="{% if club.managerLastName is defined %}{{ club.managerLastName }}{% endif %}" required/>
            </div>
            <div class="form-group">
                <label for="inputManagerFirstName">Prénom du référent</label>
                <input class="form-control" id="inputManagerFirstName" type="text" name="managerFirstName" value="{% if club.managerFirstName is defined %}{{ club.managerFirstName }}{% endif %}" required/>
            </div>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input class="form-control" id="inputEmail" type="email" name="email" value="{% if club.email is defined %}{{ club.email }}{% endif %}" required/>
            </div>
            {% if club.id is not defined %}
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input class="form-control" id="inputPassword" type="password" name="password" required/>
            </div>
            {% endif %}
            <div class="form-group">
                <label for="inputPhoneNumber">Numéro de téléphone</label>
                <input class="form-control" id="inputPhoneNumber" type="text" name="phoneNumber" value="{% if club.phoneNumber is defined %}{{ club.phoneNumber }}{% endif %}" required/>
            </div>
            <div class="form-group">
                <label for="inputActive">Club actif</label>
                <select class="custom-select" id="inputActive" name="active" required>
                    {% if (club.active is defined) %}
                        {% if club.active %}
                            <option value="1" selected>Oui</option>
                            <option value="0">Non</option>
                        {% else %}
                            <option value="1">Oui</option>
                            <option value="0" selected>Non</option>
                        {% endif %}
                    {% else %}
                        <option value="1" selected>Oui</option>
                        <option value="0">Non</option>
                    {% endif %}
                </select>
            </div>
            <div class="w-100 text-right">
                <input class="btn btn-primary" id="btnSaveClub" type="submit" value="Enregistrer"/>
            </div>
        </form>
    </div>
{% endblock %}